<% layout("/layouts/boilerplate") %>

    <div class="row mt-5">
        <div class="col-8 offset-2 text-center">
            <div class="not-built-container py-5">
                <div class="mb-4">
                    <i class="fa-solid fa-hammer fa-5x text-secondary animate-bounce"></i>
                </div>
                <h1 class="display-4 fw-bold">Under Construction</h1>
                <p class="lead text-muted mb-4">
                    Oops! It looks like our digital builders are still laying the bricks for this section.
                    We're working hard to bring you something amazing!
                </p>
                <div class="mb-5">
                    <img src="https://illustrations.popsy.co/gray/work-from-home.svg" alt="Construction Illustration"
                        style="max-width: 300px; height: auto;">
                </div>
                <a href="/listings" class="btn btn-primary btn-lg rounded-pill px-5">
                    <i class="fa-solid fa-arrow-left me-2"></i> Take Me Back Home
                </a>
            </div>
        </div>
    </div>

    <style>
        .not-built-container {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        .animate-bounce {
            animation: hammer-swing 2s ease-in-out infinite;
        }

        @keyframes hammer-swing {

            0%,
            100% {
                transform: rotate(0deg);
            }

            50% {
                transform: rotate(-30deg);
            }
        }

        [data-theme="dark"] .not-built-container {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
    </style>