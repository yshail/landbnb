<% layout("/layouts/boilerplate") %>

  <body>
    <div class="offset-2">
      <h2 class="mt-4 mb-2 card-title"><b>
          <%= listing.title %>
        </b></h2>
      <div class="card mb-3 mt-4 border-0" style="width: 50rem">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 25rem" />
        <div class="card-body">
          <p class="card-text">
            <b>Description:</b>
            <%= listing.description %><br />
              <b>Price:</b> &#8377; <%= Number(listing.price).toLocaleString("en-IN") %><br />
                <b>Location:</b>
                <%= listing.location %><br />
                  <b>Country:</b>
                  <%= listing.country %>
          </p>
        </div>
        <div class="card-body show-buttons d-flex">
          <form method="GET" class="me-3" action="/listings/<%=listing._id%>/edit">
            <button class="btn btn-primary">Edit</button>
          </form>
          <form method="POST" class="mx-3" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <hr />
      <div>
        <h3>Leave a Review!</h3>
        <div>
          <form method="POST" class="mx-3 needs-validation" action="/listings/<%= listing._id %>/reviews" novalidate>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>

            <div class="mb-3">
              <label for="comment">Comment</label>
              <textarea cols="30" name="review[comment]" rows="5" id="comment" class="form-control" required></textarea>
              <div class="invalid-feedback">Please add some comments for review.</div>
            </div>
            <button class="btn btn-outline-dark mb-3">Submit</button>
          </form>
          <hr>
          <h4>All Reviews!</h4>
          <div class="showreview row">

            <%for (review of listing.reviews){ %>
              <div class="card col-5 mb-2 ms-3">
                <div class="card-body">
                  <div class="card-title">Reviewer Name!</div>
                  <div class="card-text">
                    Rating: <%= review.rating %> star<br>
                      Comment: <%= review.comment %>
                  </div>
                  <p class="starability-result" data-rating="<%= review.rating %>">
                  </p>
                  <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-sm btn-dark mb-1 mt-1" type="submit">Delete</button>
                  </form>
                </div>

              </div>

              <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>